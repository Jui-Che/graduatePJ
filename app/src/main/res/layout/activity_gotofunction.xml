<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gotofunction"
    android:background="#FCFCFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-135dp"
        tools:layout_editor_absoluteY="-27dp">


        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="選擇作業功能"
                android:textColor="@color/teal_200"
                android:textSize="28dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/eisaiBt"
                        android:layout_width="160dp"
                        android:layout_height="98dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/functionbutton_1"
                        android:text="衛材檢查"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/surgeryBt"
                        android:layout_width="160dp"
                        android:layout_height="98dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/functionbutton_1"
                        android:text="手術作業"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/chemBt"
                        android:layout_width="160dp"
                        android:layout_height="98dp"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/functionbutton_1"
                        android:text="化療作業"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/checkWorkBt"
                        android:layout_width="160dp"
                        android:layout_height="98dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginLeft="19dp"
                        android:background="@drawable/functionbutton_1"
                        android:text="檢驗作業"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bloodTransBt"
                        android:layout_width="160dp"
                        android:layout_height="98dp"
                        android:textColor="@color/white"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:textSize="22dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/functionbutton_1"
                        android:text="輸血作業"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:background="@drawable/functionbutton_2"
            android:text="登出"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>





