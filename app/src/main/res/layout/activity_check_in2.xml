<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical"
    tools:context=".CheckIn2">

    <TextView
        android:id="@+id/title"
        android:text="Check In 病人辨識"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0ADDC9"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PatientNumber"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#504C4C"
            android:text="總表病歷號"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/patientNumberBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/wistNumber"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:text="手圈病歷號"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#504C4C"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/wistNumberBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ManCheck"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="檢驗員"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#504C4C"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ManCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="291dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Name"
                android:layout_width="111dp"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:text="姓名"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Birthday"
                android:layout_width="111dp"
                android:layout_height="48dp"
                android:text="生日"
                android:layout_marginLeft="25dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Doctor"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:text="主治醫師"
                android:layout_marginLeft="25dp"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="#9C64FFDA"
                android:text="重新輸入"
                android:textSize="15dp" />


            <Button
                android:id="@+id/Upload"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>




