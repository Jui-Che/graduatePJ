<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical"
    tools:context=".OperationVerify2">

    <TextView
        android:id="@+id/PatientNumber"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0ADDC9"
        android:gravity="center"
        android:text="進刀房病人辨識"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/KnifeNumber"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="備刀單 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/KnifeNumberBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wistNumber"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="手圈病歷號 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wistNumberBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ManCheck"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="檢驗員 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ManCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="姓名 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/patientNumberBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="生日 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Doctor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="主治醫師 :"
                android:textColor="#504C4C"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#48000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:text="內容"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frontbt"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="#6646628A"
                android:text="上一步"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Upload"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>