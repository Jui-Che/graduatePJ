<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    tools:context=".Chemogiveinfo2">
    @+id/textView10

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/title"
            android:text="給藥作業"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#0ADDC9"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PatientNumber"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="0dp"
                android:gravity="left"
                android:text="成品單號："
                android:textColor="#504C4C"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/patientNumberBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackButtoni"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="#9C64FFDA"
                android:text="重新輸入"
                android:textSize="15dp" />


            <Button
                android:id="@+id/button5"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>