<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Print_examineNumber1"
    android:background="#FAF9F7">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title"
            android:text="列印檢體編號-病歷號"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_78"
            android:background="#0ADDC9"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_24"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <TextView
                android:id="@+id/input"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint=" 請掃描手圈病歷號 "
                android:background="@drawable/hint_color"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dp_22" />

            <TextView
                android:id="@+id/show"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="手圈病歷號"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/hint_color"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:orientation="horizontal"
                android:gravity="bottom"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_weight = "1"
                    >

                    <Button
                        android:id="@+id/frontbt"
                        android:text="返回"
                        android:layout_width="140dp"
                        android:layout_height="65dp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="#FBFBFB"
                        android:textSize="@dimen/dp_18"
                        android:background="@drawable/returnbutton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_weight = "1">

                    <Button
                        android:id="@+id/nextbt"
                        android:text="下一步"
                        android:layout_width="140dp"
                        android:layout_height="65dp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="#FBFBFB"
                        android:textSize="@dimen/dp_18"
                        android:background="@drawable/nextbutton_general"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</merge>


